<div class="col-md-12">
  <div class="group">
    <%= link_to "New Group", new_group_path, class: "btn btn-primary pull-right" %>
  </div>

  <table class="table table-striped table-bordered table-hover text-center">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator </td>
        <td colspan="2">操作</td>

      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to group.title, group %></td>
          <td><%= group.description %></td>
          <td><%= group.user.email %></td>
          <td><%= link_to 'Edit', edit_group_path(group), :class => "btn btn-info" %></td>
          <td><%= link_to 'Delete', group_path(group), method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>